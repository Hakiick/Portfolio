---
import { getCollection } from 'astro:content';
import BaseLayoutFR from '../layouts/BaseLayoutFR.astro';
import PortfolioPreviewFR from '../components/PortfolioPreviewFR.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';
import ContactCTAFR from '../components/ContactCTAFR.astro';

const projects = (await getCollection('workFR')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayoutFR
	title="Mon travail adoré | Maxime Sarrazin"
	description="Learn about Sarrazin Maxime's most recent projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Mon travail adoré"
				tagline="Consultez mes projets les plus récents ci-dessous pour avoir une idée de mon expérience passée."
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreviewFR project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTAFR />
	</div>
</BaseLayoutFR>
